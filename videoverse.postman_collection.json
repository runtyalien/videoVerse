{
    "info": {
        "name": "Video Management API",
        "description": "API for managing video uploads, trimming, merging, sharing, and playback.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Upload Video",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer YOUR_STATIC_API_TOKEN"
                    }
                ],
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "title",
                            "value": "Sample Video",
                            "type": "text"
                        },
                        {
                            "key": "file",
                            "type": "file",
                            "src": "path/to/your/video.mp4"
                        }
                    ]
                },
                "url": {
                    "raw": "http://localhost:5000/api/videos/upload",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "5000",
                    "path": ["api", "videos", "upload"]
                }
            },
            "response": [
                {
                    "code": 201,
                    "body": {
                        "id": "1",
                        "title": "Sample Video",
                        "size": 10485760,
                        "duration": 120,
                        "filePath": "uploads/Sample_Video.mp4"
                    }
                },
                {
                    "code": 400,
                    "body": {
                        "message": "File too large. Max size is 25 MB."
                    }
                },
                {
                    "code": 403,
                    "body": {
                        "message": "Forbidden"
                    }
                }
            ]
        },
        {
            "name": "Trim Video",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer YOUR_STATIC_API_TOKEN"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": {
                        "title": "Sample Video",
                        "trimStart": 10,
                        "trimEnd": 50
                    }
                },
                "url": {
                    "raw": "http://localhost:5000/api/videos/trim",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "5000",
                    "path": ["api", "videos", "trim"]
                }
            },
            "response": [
                {
                    "code": 200,
                    "body": {
                        "message": "Video trimmed successfully",
                        "filePath": "uploads/trimmed_Sample_Video_1630450923000.mp4"
                    }
                },
                {
                    "code": 400,
                    "body": {
                        "message": "Invalid id, trimStart, or trimEnd."
                    }
                },
                {
                    "code": 404,
                    "body": {
                        "message": "Video not found."
                    }
                }
            ]
        },
        {
            "name": "Merge Videos",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer YOUR_STATIC_API_TOKEN"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": {
                        "titles": ["Sample Video 1", "Sample Video 2"]
                    }
                },
                "url": {
                    "raw": "http://localhost:5000/api/videos/merge",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "5000",
                    "path": ["api", "videos", "merge"]
                }
            },
            "response": [
                {
                    "code": 200,
                    "body": {
                        "message": "Videos merged successfully",
                        "filePath": "uploads/merged_Sample_Video_1_Sample_Video_2.mp4"
                    }
                },
                {
                    "code": 400,
                    "body": {
                        "message": "Provide at least two video titles to merge."
                    }
                },
                {
                    "code": 404,
                    "body": {
                        "message": "Some videos not found: Sample Video 3"
                    }
                }
            ]
        },
        {
            "name": "Share Video",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer YOUR_STATIC_API_TOKEN"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": {
                        "title": "Sample Video",
                        "expiryTime": 300
                    }
                },
                "url": {
                    "raw": "http://localhost:5000/api/videos/share",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "5000",
                    "path": ["api", "videos", "share"]
                }
            },
            "response": [
                {
                    "code": 200,
                    "body": {
                        "message": "Video link shared successfully",
                        "link": "http://localhost:5000/api/videos/1/play",
                        "expiryTime": "2024-11-01T15:58:29.875Z"
                    }
                },
                {
                    "code": 404,
                    "body": {
                        "message": "Video not found."
                    }
                }
            ]
        },
        {
            "name": "Play Video",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer YOUR_STATIC_API_TOKEN"
                    }
                ],
                "url": {
                    "raw": "http://localhost:5000/api/videos/1/play",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "5000",
                    "path": ["api", "videos", "1", "play"]
                }
            },
            "response": [
                {
                    "code": 200,
                    "body": {
                        "message": "Video found and playing",
                        "filePath": "uploads/Sample_Video.mp4"
                    }
                },
                {
                    "code": 404,
                    "body": {
                        "message": "Video not found."
                    }
                },
                {
                    "code": 403,
                    "body": {
                        "message": "Link has expired."
                    }
                }
            ]
        }
    ]
}
